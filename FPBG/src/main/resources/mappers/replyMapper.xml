<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.FPBG.mapper.ReplyMapper">

	<insert id="create">
	insert into Reply (replyContent)
	values(#{replyContent})
	</insert>
	
	<update id="update">
	update Reply set replyContent =#{replyContent}
	where replyNumber =#{replyNumber}
	</update>
	
	<delete id="delete">
	delete from Reply where replyNumber =#{replyNumber}
	</delete>
	
	<select id="listAll">
	<![CDATA[
	select
	replyNumber, replyContent, replyDate
	from Reply
	order by replyNumber desc
	]]>
	</select>

</mapper>
